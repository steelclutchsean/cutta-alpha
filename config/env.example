# ============================================
# CUTTA - Environment Configuration
# ============================================
# Copy this file to .env in the project root and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://cutta:your_secure_password@localhost:5432/cutta

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT (Legacy - for existing users)
# ============================================
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# CLERK AUTHENTICATION
# ============================================
# Get these from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_live_xxxxx
CLERK_SECRET_KEY=sk_live_xxxxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx

# Clerk redirect URLs (update for production domain)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ============================================
# STRIPE PAYMENTS
# ============================================
# Get these from https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================
# LIVEKIT STREAMING
# ============================================
# Get these from https://cloud.livekit.io
LIVEKIT_API_KEY=APIxxxxx
LIVEKIT_API_SECRET=xxxxx
LIVEKIT_URL=wss://your-app.livekit.cloud

# ============================================
# APPLICATION URLS
# ============================================
# Development
# API_URL=http://localhost:3001
# WEB_URL=http://localhost:3000

# Production (update with your domain)
API_URL=https://api.yourdomain.com
WEB_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production

